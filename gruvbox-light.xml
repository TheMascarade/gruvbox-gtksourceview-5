  <color name="(66, 4) neutral_blue"            value="#458588"/>
  <color name="(72, 6) neutral_aqua"            value="#689D6A"/>
  <color name="(88, -) faded_red"               value="#9D0006"/>
  <color name="(96, -) faded_purple"            value="#8F3F71"/>

  <!-- Global Styles -->
  <style name="background-pattern"              background="#rgba(213,196,161,0.463333)"/>
  <style name="bracket-match"                   foreground="(167, 9) bright_red" bold="false" weight="semibold" italic="false" underline="none"/>
  <style name="current-line"                    background="(250, -) fg2/light2/bg2"/>
  <style name="current-line-number"             background="(250, -) fg2/light2/bg2" bold="true"/>
  <style name="cursor"                          foreground="(235, 0) bg0/dark0/fg0"/>
  <style name="draw-spaces"                     foreground="(246, 7) gray/light4/fg4/bg4"/>
  <style name="line-numbers"                    background="(250, -) fg2/light2/bg2" foreground="(132, 5) neutral_purple"/>
  <style name="line-numbers-border"             background="(246, 7) gray/light4/fg4/bg4"/>
  <style name="map-overlay"                     background="(235, 0) bg0/dark0/fg0"/>
  <style name="right-margin"                    background="(243, -) bg3/dark4/fg4"/>
  <style name="secondary-cursor"                foreground="#rgba(191,64,64,0)"/>
  <style name="selection"                       background="(239, -) bg2/dark2/fg2"/>
  <style name="text"                            background="(223, 15) fg1/light1/bg1" foreground="(234, 0) bg0_h/dark0_hard"/>

  <!-- Defaults -->
  <style name="def:boolean"                     foreground="(66, -) faded_aqua"/>
  <style name="def:builtin"                     foreground="(130, -) faded_orange"/>
  <style name="def:comment"                     foreground="(239, -) bg2/dark2/fg2" bold="false"/>
  <style name="def:constant"                    foreground="(166, -) neutral_orange" weight="medium" underline="none"/>
  <style name="def:deletion"                    foreground="(167, 9) bright_red" strikethrough="true"/>
  <style name="def:doc-comment"                 foreground="(239, -) bg2/dark2/fg2"/>
  <style name="def:doc-comment-element"         foreground="(239, -) bg2/dark2/fg2" bold="false" weight="semibold" italic="false"/>
  <style name="def:emphasis"                    italic="true"/>
  <style name="def:function"                    foreground="(96, -) faded_purple"/>
  <style name="def:heading"                     foreground="(96, -) faded_purple" bold="true" scale="1.2"/>
  <style name="def:identifier"                  foreground="(96, -) faded_purple"/>
  <style name="def:inline-code"                 foreground="(100, -) faded_green" weight="medium"/>
  <style name="def:keyword"                     foreground="(124, 1) neutral_red" weight="medium"/>
  <style name="def:link-destination"            foreground="(24, -) faded_blue" underline="single" underline-color="(24, -) faded_blue"/>
  <style name="def:link-symbol"                 foreground="#rgba(0,0,0,0)"/>
  <style name="def:link-text"                   foreground="(24, -) faded_blue" bold="false" underline="single"/>
  <style name="def:list-marker"                 foreground="(24, -) faded_blue" weight="medium"/>
  <style name="def:net-address"                 foreground="(132, 5) neutral_purple" underline="single" underline-color="(132, 5) neutral_purple"/>
  <style name="def:note"                        foreground="(166, -) neutral_orange"/>
  <style name="def:operator"                    foreground="(96, -) faded_purple"/>
  <style name="def:preformatted-section"        foreground="(100, -) faded_green" weight="medium"/>
  <style name="def:preprocessor"                foreground="(96, -) faded_purple" bold="true" underline="none" scale="1"/>
  <style name="def:reserved"                    foreground="(96, -) faded_purple" bold="true"/>
  <style name="def:special-char"                foreground="(166, -) neutral_orange" bold="false" weight="semibold"/>
  <style name="def:statement"                   foreground="(24, -) faded_blue" bold="true"/>
  <style name="def:string"                      foreground="(24, -) faded_blue"/>
  <style name="def:strong-emphasis"             bold="true"/>
  <style name="def:thematic-break"              foreground="(241, -) bg3/dark3/fg3" bold="true"/>
  <style name="def:type"                        foreground="(24, -) faded_blue" bold="true" scale="1.0999999999999999"/>
  <style name="def:underlined"                  foreground="(24, -) faded_blue" underline="single" underline-color="(24, -) faded_blue"/>
  <style name="def:warning"                     foreground="(124, 1) neutral_red"/>

  <!-- Markdown -->
  <style name="markdown:blockquote"             italic="true"/>
  <style name="markdown:code"                   foreground="(142, 10) bright_green"/>

</style-scheme>