  <color name="(24, -) faded_blue"              value="#076678"/>
  <color name="(241, -) bg3/dark3/fg3"          value="#665C54"/>
  <color name="(243, -) bg3/dark4/fg4"          value="#7C6F64"/>
  <color name="(245, 8) gray/gray_245/gray_246" value="#928374"/>
  <color name="(246, -) fg4/light4/bg4"         value="#A89984"/>
  <color name="(246, 7) gray/light4/fg4/bg4"    value="#A89984"/>
