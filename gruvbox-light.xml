  <color name="(136, -) faded_yellow"           value="#B57614"/>
  <color name="(142, 10) bright_green"          value="#B8BB26"/>
  <color name="(166, -) neutral_orange"         value="#D65D0E"/>
  <color name="(167, 9) bright_red"             value="#FB4934"/>
  <color name="(172, 3) neutral_yellow"         value="#D79921"/>
  <color name="(175, 13) bright_purple"         value="#D3869B"/>
